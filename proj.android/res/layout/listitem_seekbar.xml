<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="?android:attr/listPreferredItemHeight"
    android:orientation="vertical"
    android:paddingLeft="@dimen/control_padding_left"
    android:gravity="center_vertical">

    <TextView
        android:id="@+id/control_item_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
    />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="5dp">

        <SeekBar
            android:id="@+id/control_item_slider"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:minHeight="5dp"
            android:maxHeight="5dp"
            android:progressDrawable="@drawable/seekbar_progress"
            android:thumb="@drawable/seekbar_thumb"
        />
        <TextView
            android:id="@+id/control_item_slider_value"
            android:layout_width="@dimen/textview_seekbar_value_width"
            android:layout_height="match_parent"
            android:gravity="center"
        />
    </LinearLayout>

</LinearLayout>
